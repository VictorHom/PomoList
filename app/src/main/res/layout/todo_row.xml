<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:text="Notes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/todo_text"
        android:layout_weight="0.39"
        android:layout_alignBottom="@+id/due_date"
        android:layout_marginRight="20dp"
        android:background="@color/background_color"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATE"
        android:id="@+id/due_date"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/priority"
        android:layout_toStartOf="@+id/priority"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tomato"
        android:layout_below="@+id/due_date"
        android:layout_alignLeft="@+id/due_date"
        android:layout_alignStart="@+id/due_date"
        android:paddingRight="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/priority"
        android:background="@color/colorAccent"
        android:width="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:height="45dp"/>
</RelativeLayout>
